@using HFWebsiteA7.Models
@model HFWebsiteA7.ViewModels.AdminBand

<div class="container-fluid">
@using (Html.BeginForm("EditBand", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-5">
            <div class="row">
                <div class="col-md-4">
                    <h4>Name</h4>
                    @Html.TextBoxFor(m => m.Band.Name)
                    @Html.ValidationMessageFor(m => m.Band.Name)
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4>Description</h4>
                    @Html.TextAreaFor(m => m.Band.Description)
                    @Html.ValidationMessageFor(m => m.Band.Description)
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="row">
                <div class="col-md-4">
                    <h4>Image</h4>
                </div>

            </div>
            
            <div class="row">
                <div class="col-md-8">
                    <input type="file" name=File id="File" accept="image/jpeg, image/png,image/jpg" />
                    <br />
                </div>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Opslaan" class="mLinkButton" />
        </div>
    </div>
}
</div>