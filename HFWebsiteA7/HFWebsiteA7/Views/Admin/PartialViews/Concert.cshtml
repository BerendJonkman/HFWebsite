@using HFWebsiteA7.Models
@model IEnumerable<HFWebsiteA7.Models.Concert>

@foreach (Concert concert in Model)
{
    <hr />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-4">
                        <h4>Name</h4>
                        <p>@concert.Band.Name</p>
                    </div>
                    <div class="col-md-4">
                        <h4>Date</h4>
                        <p>@concert.Day.Date.ToString("dddd dd-MM-yyyy")</p>
                    </div>
                    <div class="col-md-4">
                        <h4>Time</h4>
                        <p>@concert.StartTime.ToString("H:mm")</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <h4>Description</h4>
                        <p>@concert.Band.Description</p>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-6">
                                <h4>Location</h4>
                                @concert.Location.Name
                            </div>
                            <div class="col-md-6">
                                <h4>Hall</h4>
                                @concert.Hall.Name
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <h4>Price</h4>
                                @concert.Hall.Price
                            </div>
                            <div class="col-md-6">
                                <h4>Seats</h4>
                                @concert.Hall.Seats
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <h4>Image</h4>
            </div>
            <div class="col-md-1">
            </div>
        </div>
    </div>
}