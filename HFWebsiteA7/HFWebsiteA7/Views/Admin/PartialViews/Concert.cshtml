@model IEnumerable<HFWebsiteA7.Models.Concert>

<table class="table">
    <tr>
        <th>
            Day
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableSeats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            Band
        </th>
        <th>
            Hall
        </th>
        <th>
            Location
        </th>
        <th></th>
    </tr>

@foreach (var concert in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => concert.Day.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => concert.AvailableSeats)
        </td>
        <td>
            @concert.Duration.ToString("0.0")
        </td>
        <td>
            @Html.DisplayFor(modelItem => concert.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => concert.Band.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => concert.Hall.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => concert.Location.Name)
        </td>
        <td>
            <img src="~/Content/Content-images/Admin/ic_mode_edit_black_24dp_1x.png" alt="Edit Band" style="margin-right: 5px" onclick="javascript: showConcertDialog(@concert.EventId)" />
        </td>
    </tr>
}

</table>
