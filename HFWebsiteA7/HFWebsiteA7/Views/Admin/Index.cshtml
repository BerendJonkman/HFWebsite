@model HFWebsiteA7.Models.AdminUser

@{
    ViewBag.Title = "Index";
}

<div class="container" style="padding-top: 70px; padding-bottom: 50px">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-6">
            <h1>Admin Login</h1>
            <h3 style="font-size: 23px">Enter your login information below.</h3>
            <div>
                @Html.ValidationSummary()
                @using (Html.BeginForm())
                {
                    <div style="margin: 30px;">
                        <div class="row">
                            <div class="row">
                                @Html.LabelFor(m => m.Username)
                            </div>
                            <div class="row">
                                @Html.TextBoxFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="row">
                                @Html.LabelFor(m => m.Password)
                            </div>
                            <div class="row">
                                @Html.PasswordFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <input type="submit" value="Log in" class="mLinkButton" style="margin: 0px"/>
                }
            </div>

        </div>
    </div>

</div>

