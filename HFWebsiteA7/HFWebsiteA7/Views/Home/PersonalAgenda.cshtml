@model HFWebsiteA7.ViewModels.PersonalAgendaViewModel

@section Banner {
    <div style="margin-top: 50px; background-image: url(../../Content/Content-images/Home/IndexBanner.jpg); background-repeat: round; height: 300px"></div>
}

<div class="container">

    <h2>Personal Agenda</h2>
    <p>Retrieve your own personal agenda by entering your email and the code you've recieved with ordering the tickets</p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-6">
                <p>Email:</p>
                @Html.EditorFor(t => t.Email, new { htmlAttributes = new { @class = "form-control" } })
                <br/>
                <p>Code:</p>
                @Html.EditorFor(t => t.Code, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationSummary()
                <br />
            </div>
        </div>
        <input type="submit" value="Retrieve personal agenda" class="mLinkButton" />
    }
</div>


