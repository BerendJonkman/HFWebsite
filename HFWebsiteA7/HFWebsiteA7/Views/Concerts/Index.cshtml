@model HFWebsiteA7.Models.JazzIndexViewModel


@{
    ViewBag.Title = "Jazz@Patronaat";
}

<div class="container">
    <h2>Jazz@Patronaat</h2>
    <p>Do you like some Jazz music? Then Jazz@Patronaat is the perfect event to go to! With over 18 bands performing in 4 days there must be something for you!</p>

    <div class="col-sm-3">
        <h3>Thursday:</h3>
        <p>
            <b>Date:</b>
        </p>
        <p>
            <b>Location:</b>
            <b>Performing:</b>
            @foreach (var item in Model.ThursdayConcerts)
            {
                @item.Band.Name@:;
        }
        </p>
        <a href="@Url.Action("Thursday", "Thursday")" class="mLinkButton">More information about Thursday</a>
    </div>

    <div class="col-sm-3">
        <h3>Friday:</h3>
